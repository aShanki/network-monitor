# Network interface to monitor (leave empty for auto-detection)
# Note: When running in Docker, this should be the host's interface name
INTERFACE_NAME=

# Network speed threshold in Mbps
# NM_THRESHOLD_MBPS=50.0

# Webhook URL for notifications
# NM_WEBHOOK_URL=

# Interval for checking network speed in seconds
# NM_INTERVAL_SECONDS=5

# Number of top talkers to report
# NM_TOP_N=5

# Prometheus metrics settings
# NM_METRICS_ENABLED=true
# NM_METRICS_PORT=9090 